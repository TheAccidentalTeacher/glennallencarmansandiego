# Railway Deployment Configuration
# These will be automatically populated by Railway
RAILWAY_ENVIRONMENT=production
RAILWAY_PUBLIC_DOMAIN=
DATABASE_URL=postgresql://postgres:password@host:port/database

# Required Environment Variables for Production
NODE_ENV=production
PORT=3001

# JWT Configuration (REQUIRED - Generate secure keys!)
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration (Railway will provide)
# DATABASE_URL=postgresql://username:password@localhost:5432/sourdough_pete_dev
DATABASE_TEST_URL=postgresql://username:password@localhost:5432/sourdough_pete_test

# CORS Configuration (for development)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000

# Application Configuration
APP_NAME=Sourdough Pete
APP_VERSION=1.0.0

# Security
BCRYPT_ROUNDS=12

# Development Settings
LOG_LEVEL=debug
DEBUG_MODE=true

# Authentication Bypass (set to true to skip login)
VITE_BYPASS_AUTH=true

# Optional: External Services
# OPENAI_API_KEY=your-openai-key-for-content-generation
# GOOGLE_MAPS_API_KEY=your-google-maps-key